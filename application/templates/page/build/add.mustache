
	<form action="{{add_action}}" method="POST" id="form_build_add">
		<fieldset>
			<legend>Add new build</legend>
			<ul>
				<li>
					<label for="name">Build name:</label>
					<input type="text" name="build[name]" id="name" {{#errors.name}}class="error" {{/errors.name}}/>
				</li>
				<li>
					<label for="url">Build link:</label>
					<input type="url" name="build[url]" id="url" value="{{build_data.url}}" {{#errors.url}}class="error" {{/errors.url}}/>
				</li>
{{#slots}}
				<li>
					<label for="{{name}}">{{name}}:</label>
					<input type="number" name="quantity[{{name}}]" id="{{name}}" />
				</li>
{{/slots}}
				<li>
					{{{csrf}}}
					<input type="submit" value="Submit" />
				</li>
			</ul>
		</fieldset>
	</form>

<p>Need something not listed here?  You can <a href="{{slot_add}}">add it</a>.