
	<form action="{{edit_action_url}}" method="POST" id="form_build_edit">
		<fieldset>
			<legend>Edit build</legend>
			<ul>
				<li>
					<label for="name">Build name:</label>
					<input type="text" name="build[name]" id="name" value="{{build_data.name}}" {{#errors.name}}class="error" {{/errors.name}}/>
					{{#errors.name}}<p class="error_message">{{errors.name}}</p>{{/errors.name}}
				</li>
				<li>
					<label for="url">Build link:</label>
					<input type="text" name="build[url]" id="url" value="{{build_data.url}}" {{#errors.url}}class="error" {{/errors.url}}/>
					{{#errors.url}}<p class="error_message">{{errors.url}}</p>{{/errors.url}}
				</li>
{{#slots}}
				<li>
					<label for="{{name}}">{{name}}:</label>
					<input type="number" name="quantity[{{name}}]" id="{{name}}" value="{{quantity}}" min="0" />
				</li>
{{/slots}}
				<li>
					{{{csrf}}}
					<input type="submit" value="Submit" />
				</li>
			</ul>
		</fieldset>
	</form>

<p>Need something not listed here?  You can <a href="{{slot_add}}">add it</a>.
{{#removal}}
<hr />
<p><a href="{{removal}}">Remove this build</a></p>
{{/removal}}