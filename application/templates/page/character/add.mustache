	<form id="character_add" action="{{action}}" method="post" class="panel">
		<fieldset>
			<legend>Add new character</legend>
			<ul>
				<li>
					<label for="name">Character name:</label>
					<input type="text" name="character[name]" id="name" value="{{name}}" {{#errors.name}}class="error" {{/errors.name}}/>
					{{#errors.name}}<p class="error_message">{{errors.name}}</p>{{/errors.name}}
				</li>
				<li>
					<label for="profession">Profession:</label>
					<select name="character[profession]" id="profession">
					{{#professions}}
						<option value="{{.}}">{{.}}</option>
					{{/professions}}
					</select>
				</li>
				<li class="button">
					{{{csrf}}}
					<input type="submit" value="Add character" />
				</li>
			</ul>
		</fieldset>
	</form>