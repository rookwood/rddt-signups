
	<section id="characters">
		<section id="character_list">
			<h3>My Characters</h3>
{{^count}}		<p>You have no characters listed.</p>{{/count}}
{{#count}}
				<ul>
{{#character_list}}
					<li>
						<div class="profession_icon" style="background-image: url('/media/img/prof_icons/{{profession}}.png');"></div>
						<div>
							<h4>{{name}}</h4>
							<h5>Profession: {{profession}}</h5>
						</div>
						<a href="#" class="delete" title="Delete {{name}}">Delete</a>
						<a href="{{edit_url}}" class="edit" title="Edit {{name}}">Edit</a>
					</li>
{{/character_list}}
{{#character_add_link}}<li class="button"><a href="{{character_add_link}}">Add new character</a></li>{{/character_add_link}}
				</ul>

{{/count}}

{{^character_add_link}}<p>You may not add new characters at this time.</p>{{/character_add_link}}
	</section><!-- end character list -->
