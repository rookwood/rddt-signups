							<div id="tabs">
								<ul>
									<li><a href="#attendees">Attendees ({{attendee_count}})</a></li>
									<li><a href="#standby">Standby ({{standby_count}})</a></li>
								</ul>
								<div id="attendees">
									<ul>
{{#attendees.active}}
										<li>
											<div class="player">
												<img class="profession" src="/media/img/prof_icons/{{profession}}_small.png" />
												<span class="name">{{name}}</span>
												{{#comment}}<a href="#">?</a>
												<ul><li><div class="comment">{{comment}}</div></li></ul>{{/comment}}
											</div>
											<div class="role">{{role}}</div>
										</li>
{{/attendees.active}}
