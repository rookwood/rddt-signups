	<form action="{{sign_up_link}}" method="post" id="sign_up_form" class="panel">
		<fieldset>
			<legend>Event details</legend>
			<table id="events">
				<thead>
					<tr>
						<td>Date</td>
						<td>Start time</td>
						<td>Event name</td>
						<td>Status</td>
						<td>Host</td>
					</tr>
				</thead>
				<tbody>
				{{#event}}
					<tr>
						<td>{{date}}</td>
						<td>{{time}}</td>
						<td>{{description}}</td>
						<td>{{status}}</td>
						<td>{{host}}</td>
					</tr>
				{{/event}}
				</tbody>
			</table>
			<ul>
				<li>
					<label for="character">Attend as:</label>
					<select name="event[character]" id="character">
{{#characters}}
						<option class="{{profession}}" value="{{name}}">{{name}}</option>
{{/characters}}
					</select>
				</li>
				<li>
					<fieldset class="reliability">
						<legend>Sign-up as:</legend>
						<label for="status_ready">Ready</label>
						<input type="radio" name="event[status]" id="status_ready" value="ready" />
						<label for="status_standby">Stand-by</label>
						<input type="radio" name="event[status]" id="status_standby" value="standby" />
					</fieldset>					
				</li>
				<li>
					<label for="comments">Comments:</label>
					<textarea name="event[comment]" id="comments"></textarea>
				</li>
			</ul>
			{{{csrf}}}
			<input type="submit" value="Sign up" />
		</fieldset>
		<h4>Currently signed up</h4>
		<ul>
		{{#attendees}}
			<li class="profession">{{name}} the {{profession}}</li>
		{{/attendees}}
		</ul>
		
		<input type="submit" value="other sign up button" />
	</form>