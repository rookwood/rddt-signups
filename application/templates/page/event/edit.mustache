
	<form action="{{event_edit_action}}" method="post" class="panel" id="event_edit">
		<fieldset>
			<legend>Edit event</legend>
			<ul>
				<li>
					<label for="title">Event title:</label>
					<input type="text" name="event[title]" id="title" value="{{event_data.title}}" {{#errors.title}}class="error" {{/errors.title}}/>
					{{#errors.title}}<p class="error_message">{{errors.title}}</p>{{/errors.title}}
				</li>
				<li>
					<label for="dungeon">Dungeon:</label>
					<select name="event[dungeon]" id="dungeon" {{#errors.dungeon}}class="error" {{/errors.dungeon}}>
{{#dungeon_list}}
						<option value="{{value}}"{{#selected}} selected="selected"{{/selected}}>{{name}}</option>
{{/dungeon_list}}
					</select>
					{{#errors.dungeon}}<p class="error_message">{{errors.dungeon}}</p>{{/errors.dungeon}}
				</li>
				<li>
					<label for="time">Scheduled time:</label>
					<input type="time" name="event[time]" id="time" value="{{scheduled_time}}" {{#errors.time}}class="error" {{/errors.time}}/>
				</li>
				<li>
					<label for="timezone">In timezone:</label>
					<select name="event[timezone]" id="timezone">
{{#timezone_list}}
						<option value="{{value}}"{{#selected}} selected="selected"{{/selected}}>{{name}}</option>
{{/timezone_list}}
					</select>
					{{#errors.timezone}}<p class="error_message">{{errors.timezone}}</p>{{/errors.timezone}}
				</li>
				<li>
					<label for="date">Scheduled date:</label>
					<input type="date" name="event[date]" id="date" value="{{scheduled_date}}" {{#errors.date}}class="error" {{/errors.date}}/>
				</li>
				<li>
					<label for="description">Event details:</label>
					<textarea name="event[description]" id="description" value="{{event_data.description}}" {{#errors.description}}class="error" {{/errors.description}}></textarea>
				</li>
				<li>
					<label for="build">Build planned:</label>
					<select name="event[build]" id="build" {{#errors.build}}class="error" {{/errors.build}}>
{{#build_list}}
						<option value="{{name}}">{{name}}</option>
{{/build_list}}
					</select>
				</li>
				<li>
					<label for="character">Lead as:</label>
					<select name="event[character]" id="character">
{{#characters}}
						<option class="{{profession}}" value="{{name}}">{{name}}</option>
{{/characters}}
					</select>
				<li class="button">
					{{{csrf}}}
					<input type="submit" value="Create event" />
				</li>
			</ul>
		</fieldset>
	</form>
