
	<table id="events">
		<thead>
			<tr>
				<td>Sign-up</td>
				<td>Date</td>
				<td>Start time</td>
				<td>Event name</td>
				<td>Status</td>
				<td>Host</td>
			</tr>
		</thead>
		<tbody>
		{{#events}}
			<tr>
			<td><a href="{{sign_up_link}}">Sign me up!</a></td>
				<td>{{date}}</td>
				<td>{{time}}</td>
				<td>{{description}}</td>
				<td>{{status}}</td>
				<td>{{host}}</td>
			</tr>
		{{/events}}
		</tbody>
	</table>
