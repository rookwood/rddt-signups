			<section id="events">
				{{#add_event}}<a class="button" href="{{add_event}}">Create new event</a>{{/add_event}}
				<div class="sort_selector">
					<div class="sort_label">Sort by</div>
					<ul class="sort_dropdown">
						<li class="sort_selected">
							<a>{{#filters.top}}{{text}}{{/filters.top}}</a>
							<ul>
{{#filters.bottom}}
								<li><a href="{{url}}">{{text}} <span class="count"></span></a></li>
{{/filters.bottom}}
							</ul>
						</li>
					</ul> <!-- end dropdown -->
				</div>

				{{#filter_message}}<p>{{filter_message}}</p>{{/filter_message}}
				<!-- <p>All events are displayed in the timezone set in your profile.</p> -->
				
				<ul id="event_list">
{{#events}}
					<li class="event_collapsed clickable" data-url="{{details_link}}">
						<ul class="header">
							<li class="event_title">
								<div>
									<h4>{{dungeon}}</h4>
									<h5>Manager: {{host}}</h5>
								</div>
							</li>
							<li class="event_numbers">
								<div>
									<h4><span class="player_count_{{signup_status}}">{{player_count}}/{{player_total}}</span></h4>
									<h5>Players</h5>
								</div>
							</li>
							<li class="event_time">
								<div>
									<h4><time class="date" datetime="{{time_full}}">{{date}}</time></h4>
									<h5><time class="time" datetime="{{time_full}}">{{time}}</time></h5>
								</div>
							</li>
						</ul>
						<section class="event_data"></section>
					</li><!-- end of this event -->
					
					<div class="event_footer"></div>
					
				<!-- {{status}} -->
{{/events}}
{{^events}}
					<li>
						<ul class="header">
							<li class="event_title">
								<div>
									<h4>No events scheduled at this time</h4>
					</div></li></ul></li>
{{/events}}
				</ul>
			</section><!-- end event list -->

			<div class="events_footer"></div>
	
